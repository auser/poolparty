#!/usr/bin/env ruby
$:.unshift(File.join(File.dirname(__FILE__), "..", "lib"))
require "poolparty"
require "poolpartycl"

o = PoolParty::Optioner.new(ARGV) do |opts, optioner|
  opts.on('-n name', '--name name', 'Listing for cloud name')    { |c| optioner.cloudname c }
end

o.loaded_clouds.each do |cld|  
  puts header("Contracting cloud #{cld.name}")
  puts "#{cld.instances_by_status("running").size} running instances (#{cld.minimum_instances} minimum instances)"
  puts testing ? "Not contracting (test mode)" : "Contracting the cloud if possible"

  last_instance_id = cld.instances_by_status("running").last[:instance_id]
  cld.remote_base.terminate_instance! cld.options.merge(:instance_id => last_instance_id)
end